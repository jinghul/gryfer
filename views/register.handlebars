<div class="row mt-4" style="height: calc(100% - 100px);padding: 0px 15px">
    <div class="col w-100" id="reg-col" style="min-width: 500px">
        <h1 class="display-5 text-center mt-4">
            Register to {{page}}
        </h1>

        {{#if drive}}
        <form id="form-reg" class="auth-form w-75 mx-auto needs-validation" driver="true" novalidate>
            {{#if fname}}
            <div class="w-100 driver-reg-1 mb-4 mt-4">
                <button class="btn btn-outline-primary btn-block" loggedin="true" id="exist-account" disabled>Signed in
                    as {{fname}}</button>
            </div>
            <div class="form-row driver-reg-1">
                <div class="form-group col-md-6">
                    <label for="fn-reg">First Name</label>
                    <input type="text" class="form-control" name="fname" placeholder="{{fname}}" disabled />
                </div>
                <div class="form-group col-md-6">
                    <label for="ln-reg">Last Name</label>
                    <input type="text" class="form-control" name="lname" placeholder="{{lname}}" disabled />
                </div>
            </div>
            <div class="form-row driver-reg-1">
                <div class="form-group col-md-12">
                    <label for="email-reg">Email</label>
                    <input type="email" class="form-control" id="email-reg" name="email" placeholder="{{email}}"
                        disabled />
                </div>
            </div>
            <div class="form-row driver-reg-1">
                <div class="form-group col-md-6">
                    <label for="user-reg">Username</label>
                    <input type="text" class="form-control" id="user-reg" name="username" placeholder="{{username}}"
                        disabled/>
                </div>
                <div class="form-group col-md-6">
                    <label for="password-reg">Password</label>
                    <input type="password" class="form-control" minlength="4" name="password" id="password-reg"
                        placeholder="********" disabled/>
                </div>
            </div>
            {{else}}
                <div class="w-100 driver-reg-1 mb-4 mt-4">
                    <button class="btn btn-outline-primary btn-block" loggedin="false" type="button" id="exist-account">Use Existing
                        Account</button>
                </div>
                <div class="form-row driver-reg-1">
                    <div class="form-group col-md-6">
                        <label for="fn-reg">First Name</label>
                        <input type="text" class="form-control" name="fname" placeholder="John" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ln-reg">Last Name</label>
                        <input type="text" class="form-control" name="lname" placeholder="Doe" required />
                    </div>
                </div>
                <div class="form-row driver-reg-1">
                    <div class="form-group col-md-12">
                        <label for="email-reg">Email</label>
                        <input type="email" class="form-control" id="email-reg" name="email"
                            placeholder="jdoe@email.com" required />
                    </div>
                </div>
                <div class="form-row driver-reg-1">
                    <div class="form-group col-md-6">
                        <label for="user-reg">Username</label>
                        <input type="text" class="form-control" id="user-reg" name="username" placeholder="jdoe1234"
                            required />
                        <div class="invalid-feedback none" id="user-taken-text">
                            Username is taken.
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="password-reg">Password</label>
                        <input type="password" class="form-control" minlength="4" name="password" id="password-reg"
                            placeholder="********" required />
                        <div class="invalid-feedback">
                            Please enter at least 4 characters.
                        </div>
                    </div>
                </div>
                {{/if}}
                <div class="half-but driver-reg-1 vc-align mx-auto mt-2">
                    <button type="button" class="btn-block btn btn-primary mx-auto" id="continue-form">
                        Continue
                    </button>
                </div>
                <div class="form-row driver-reg-2">
                    <div class="form-group col-md-12">
                        <label for="license-reg">Driver's License ID</label>
                        <input type="text" class="form-control" id="license-reg" name="license" placeholder="S123456789"
                            required />
                        <div id="user-text" class="invalid-feedback">
                            Please enter your driver's license.
                        </div>
                    </div>
                </div>
                <div class="form-row driver-reg-2 mt-4 flex" id="car-desc-reg">
                    <div class="form-group col-md-4">
                        <label for="year-reg">Year</label>
                        <select class="form-control" name="year" id="year-reg">
                            <option value="2019">2019</option>
                            <option value="2018">2018</option>
                            <option value="2017">2017</option>
                            <option value="2016">2016</option>
                            <option value="2015">2015</option>
                            <option value="2014">2014</option>
                            <option value="2013">2013</option>
                            <option value="2012">2012</option>
                            <option value="2011">2011</option>
                            <option value="2010">2010</option>
                            <option value="2009">2009</option>
                            <option value="2008">2008</option>
                            <option value="2007">2007</option>
                            <option value="2006">2006</option>
                            <option value="2005">2005</option>
                            <option value="2004">2004</option>
                            <option value="2003">2003</option>
                            <option value="2002">2002</option>
                            <option value="2001">2001</option>
                            <option value="2000">2000</option>
                            <option value="1999">1999</option>
                            <option value="1998">1998</option>
                            <option value="1997">1997</option>
                            <option value="1996">1996</option>
                            <option value="1995">1995</option>
                            <option value="1994">1994</option>
                            <option value="1993">1993</option>
                            <option value="1992">1992</option>
                            <option value="1991">1991</option>
                            <option value="1990">1990</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="make-reg">Make</label>
                        <select class="form-control" name="make" id="make-reg">
                            <option value="ACURA">ACURA</option>
                            <option value="ASTON MARTIN">ASTON MARTIN</option>
                            <option value="AUDI">AUDI</option>
                            <option value="BENTLEY">BENTLEY</option>
                            <option value="BMW">BMW</option>
                            <option value="BUICK">BUICK</option>
                            <option value="CADILLAC">CADILLAC</option>
                            <option value="CHEVROLET">CHEVROLET</option>
                            <option value="CHRYSLER">CHRYSLER</option>
                            <option value="DODGE">DODGE</option>
                            <option value="FERRARI">FERRARI</option>
                            <option value="FORD">FORD</option>
                            <option value="GMC">GMC</option>
                            <option value="HONDA">HONDA</option>
                            <option value="HUMMER">HUMMER</option>
                            <option value="HYUNDAI">HYUNDAI</option>
                            <option value="INFINITI">INFINITI</option>
                            <option value="ISUZU">ISUZU</option>
                            <option value="JAGUAR">JAGUAR</option>
                            <option value="JEEP">JEEP</option>
                            <option value="KIA">KIA</option>
                            <option value="LAMBORGHINI">LAMBORGHINI</option>
                            <option value="LAND ROVER">LAND ROVER</option>
                            <option value="LEXUS">LEXUS</option>
                            <option value="LINCOLN">LINCOLN</option>
                            <option value="LOTUS">LOTUS</option>
                            <option value="MASERATI">MASERATI</option>
                            <option value="MAYBACH">MAYBACH</option>
                            <option value="MAZDA">MAZDA</option>
                            <option value="MERCEDES-BENZ">MERCEDES-BENZ</option>
                            <option value="MERCURY">MERCURY</option>
                            <option value="MINI">MINI</option>
                            <option value="MITSUBISHI">MITSUBISHI</option>
                            <option value="NISSAN">NISSAN</option>
                            <option value="PONTIAC">PONTIAC</option>
                            <option value="PORSCHE">PORSCHE</option>
                            <option value="ROLLS-ROYCE">ROLLS-ROYCE</option>
                            <option value="SAAB">SAAB</option>
                            <option value="SATURN">SATURN</option>
                            <option value="SUBARU">SUBARU</option>
                            <option value="SUZUKI">SUZUKI</option>
                            <option value="TOYOTA">TOYOTA</option>
                            <option value="VOLKSWAGEN">VOLKSWAGEN</option>
                            <option value="VOLVO">VOLVO</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="model-reg">Model</label>
                        <input type="text" class="form-control" id="model-reg" name="model" placeholder="model"
                            required />
                    </div>
                </div>
                <div class="form-row driver-reg-2 flex">
                    <div class="form-group col-md-6">
                        <label for="carlicense-reg">License Plate</label>
                        <input type="text" class="form-control" id="carlicense-reg" name="carlicense" placeholder="abc123"
                            required />
                        <div id="user-text" class="invalid-feedback">
                            Please enter your license plate.
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="maxseats-reg">Seats Available</label>
                        <input type="number" class="form-control" id="maxseats-reg" name="maxPassengers" min="1" value="4"
                            required />
                        <div id="user-text" class="invalid-feedback">
                            Please enter the maximum amount of passengers.
                        </div>
                    </div>
                </div>
                <div class="w-100 driver-reg-2 vc-align">
                    <div class="half-but mx-auto mt-4">
                        <button type="submit" class="btn-block btn btn-primary" id="submit-reg">
                            Register
                        </button>
                        <small class="form-text text-muted">
                            By clicking register, I agree to the Terms and Conditions.
                        </small>
                        <button class="btn btn-outline-secondary btn-block mt-3" type="button"
                            id="go-back-reg">Back</button>
                    </div>
                </div>
        </form>
        {{else}}
        <form id="form-reg" class="auth-form w-50 mx-auto needs-validation" novalidate>
            {{#if fname}}
            <div class="w-100 driver-reg-1 mb-4 mt-4">
                <button class="btn btn-outline-primary btn-block disabled" loggedin="true" id="exist-account">Signed in
                    as {{fname}}</button>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4 mb-3">
                    <label for="fn-reg">First Name</label>
                    <input type="text" class="form-control" name="fname" placeholder="{{fname}}" readonly/>
                </div>
                <div class="form-group col-md-4 mb-3">
                    <label for="ln-reg">Last Name</label>
                    <input type="text" class="form-control" name="lname" placeholder="{{lname}}" readonly />
                </div>
                <div class="form-group col-md-4 mb-3">
                    <label for="email-reg">Email</label>
                    <input type="email" class="form-control" id="email-reg" name="email" placeholder="{{email}}"
                        readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label for="user-reg">Username</label>
                    <input type="text" class="form-control" id="user-reg" name="username" placeholder="{{username}}"
                        readonly />
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label for="password-reg">Password</label>
                    <input type="password" class="form-control" minlength="4" name="password" id="password-reg"
                        placeholder="********" readonly />
                </div>
            </div>
            {{else}}
            <div class="w-100 driver-reg-1 mb-4 mt-4">
                <button class="btn btn-outline-primary btn-block" loggedin="false" type="button" id="exist-account">Use Existing
                    Account</button>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4 mb-3">
                    <label for="fn-reg">First Name</label>
                    <input type="text" class="form-control" name="fname" placeholder="john" required />
                    <div class="invalid-feedback">
                        Please enter a first name.
                    </div>
                </div>
                <div class="form-group col-md-4 mb-3">
                    <label for="ln-reg">Last Name</label>
                    <input type="text" class="form-control" name="lname" placeholder="doe" required />
                    <div class="invalid-feedback">
                        Please enter a last name.
                    </div>
                </div>
                <div class="form-group col-md-4 mb-3">
                    <label for="email-reg">Email</label>
                    <input type="email" class="form-control" id="email-reg" name="email" placeholder="jdoe@email.com"
                        required />
                    <div class="invalid-feedback">
                        Please enter an email.
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label for="user-reg">Username</label>
                    <input type="text" class="form-control" id="user-reg" name="username" placeholder="jdoe1234"
                        required />
                    <div class="invalid-feedback none" id="user-taken-text">
                        Username is taken.
                    </div>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label for="password-reg">Password</label>
                    <input type="password" class="form-control" minlength="4" name="password" id="password-reg"
                        placeholder="********" required />
                    <div class="invalid-feedback">
                        Please enter at least 4 characters.
                    </div>
                </div>
            </div>
            {{/if}}
            <div class="w-100" id="reg-but-box">
                <div class="half-but mx-auto mt-4">
                    <button type="submit" class="btn-block btn btn-primary" id="submit-reg">
                        Register
                    </button>
                    <small class="form-text text-muted">
                        By clicking register, I agree to the Terms and Conditions.
                    </small>
                </div>
            </div>
        </form>
        {{/if}}
    </div>
    {{#if drive}}
    <div id="reg-splash" class="col h-100 half-splash"></div>
    {{/if}}
</div>
<script src="http://localhost:3000/js/client_register.js"></script>