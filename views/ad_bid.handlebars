<div class="row base-width">
    <div class="col vertical-col h-100 px-3" style="padding-bottom: 0px">
        <div id="ad-map" class="w-100"></div>
        <div class="w-100">
            <ul class="list-group">
                <li class="list-group-item flex" style="border-radius: 0; border-top: None">
                    <div><span class="to-place list-icon fas fa-map-marker-alt input-group-text"></span></div>
                    <div>
                        <span id="ad-from" class="display-7"></span>
                    </div>
                </li>
                <li class="list-group-item flex">
                    <div>
                        <span class="from-place list-icon fas fa-map-marker-alt input-group-text"></span>
                    </div>
                    <div>
                        <span id="ad-to" class="display-7"></span>
                    </div>
                </li>
                <li class="list-group-item flex">
                    <div>
                        <span class="bg-white list-icon far fa-calendar-alt input-group-text"></span>
                    </div>
                    <div>
                        <span id="ad-date" class="display-7"></span>
                    </div>
                </li>
            </ul>


        </div>
    </div>
    <div class="col vertical-col h-100 px-3 pt-4">
        <div class="w-100 price-display">
            <div class="display-7">Current price</div>
            <span class="display-3" id="curr-price">-</span>
        </div>
        <div id="ad-status" class="price-display w-100 mt-2 mb-4">
            -
        </div>
        <ul class="list-group mb-4 mt-2 w-75 mx-auto">
            <li class="list-group-item flex">
                <div>
                    <span class="bg-white list-icon fas fa-user-tie input-group-text"></span>
                </div>
                <div style="line-height:1.25em">
                    <span id="ad-driver-name" class="display-8"></span> <span id="ad-driver-rating"
                        class="display-8"></span> <span class="fas fa-star bg-white" style="border:none;"></span> <span
                        id="ad-driver-rides" class="display-8"></span>
                </div>
            </li>
            <li class="list-group-item flex">
                <div>
                    <span class="fas fa-car bg-white list-icon input-group-text"></span>
                </div>
                <div>
                    <span class="display-8" style="line-height:1.25em" id="ad-car"></span>
                </div>
            </li>
        </ul>
        <form id="bid-form" class="mt-4 w-75 mx-auto" novalidate>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="display-7" for="ad-num-passengers">Passengers</label>
                    <input type="number" name="numPassengers" class="form-control" id="ad-num-pass" value="1">
                    <div class="invalid-feedback">
                        Please enter your number of passengers.
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="display-7" for="ad-bid-price">Bid</label>
                    <input type="number" name="bidPrice" step='0.01' class="form-control" id="ad-bid-price">
                    <div class="invalid-feedback">
                        Please enter a price above the current bid by at least $0.01
                    </div>
                </div>
            </div>
            <div class="form-row">
                <button id="submit-bid" type="submit" class="btn btn-block btn-primary">Submit Bid</button>
            </div>
        </form>
    </div>
</div>
<script src="http://localhost:3000/js/ad_bid.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key={{google_key}}&libraries=places&callback=initMapAndAutocomplete"
    async defer></script>