<div class="row mt-4 mx-auto base-width" style="height:calc(100% - 100px);padding: 0px 15px">
    <div id="auth-splash" class="col half-splash"></div>
    <div class="col" style="min-width: 485px">
        <div id="sign-in">
            <h1 class="display-5 text-center" style="margin-top:15%">
                Ride or Drive
            </h1>
            <form id="form-si" class="auth-form w-75 mx-auto needs-validation" novalidate>
                <div id="incorrect-creds" class="none">Incorrect user/password</div>
                <div class="form-group row">
                    <label for="user-si">Username</label>
                    <input type="text" class="form-control" name="username" placeholder="user" required />
                </div>
                <div class="form-group row">
                    <label for="password-si">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="password" required />
                </div>

                <div role="group" class="row mt-4">
                    <button id="submit-si" type="submit" class="btn btn-block btn-primary">
                        Sign In
                    </button>
                    <button id="si-to-reg" type="button" class="btn btn-block btn-outline-secondary">
                        Register
                    </button>
                </div>
            </form>
        </div>
        <div id="register-sel" class="h-100">
            <div class="col-6">
                <div id="to-drive-reg" class="jumbotron bg-white clickable">
                    <h1 class="display-5 text-center">Drive For Us</h1>
                    <hr class="my-4" />
                    <p class="lead">
                        Join a team of amazing drivers who have the flexibility
                        to do what they want while earning money!
                    </p>
                </div>
            </div>
            <div class="col-6">
                <div id="to-ride-reg" class="jumbotron bg-white clickable">
                    <h1 class="display-5 text-center">Ride With Us</h1>
                    <hr class="my-4" />
                    <p class="lead">
                        Find all the rides you need at a cost you never knew
                        could be so low!
                    </p>
                </div>
            </div>
            <button id="reg-to-si" type="button" class="btn btn-link">Go Back</button>
        </div>
    </div>
</div>
<script src="http://localhost:3000/js/client_signin.js"></script>